 <div class="row">
            <div class="col-md-3">            
                <%= image_tag wish.image, width: "200px", hight: "150px" %>
            </div>
            <div class="col-md-3">      
                        
                <div><%= @wish.name %></div>
                <div>  <%= @wish.start_date %> ~ <%= @wish.end_date %> </div>
                <% unless @wish.hiking.nil?%>
                    <div> <span class="badge badge-light"> <%= @wish.hiking.name %> </span> </div>
                <%end%>
                
                <hr>
                <div class="plan_descript">
                    <div> 
                          <span class="badge badge-light">收費模式</span>  <span class="badge badge-info"><%= fee_mode_show(wish.fee_mode) %></span>
                          <span class="badge badge-light">車行模式</span> <span class="badge badge-info"><%= transport_mode_show(wish.transport_mode) %></span> 
                          <span class="badge badge-light">餐飲模式</span> <span class="badge badge-info"><%= food_mode_show(wish.food_mode) %></span>             
                    </div>
                </div>            
                
            </div>
            <div class="col-md-3">   
                <div> 
                    <i class="far fa-calendar-alt"></i>
                    <span class="badge badge-light"> <%= @wish.numberofday.name %></span> 
                </div>

                <div> 
                     <i class="fas fa-bolt"></i> <span class="badge badge-light"> 難度 </span>
                    <% unless @wish.level.nil? %>
                        <% @wish.level.times {%><i class="fas fa-star"></i> <% }%>
                     <% end %>
                </div>
                <div>
                    <i class="fas fa-dollar"></i> <span class="badge badge-light"> 預算 </span>
                        <% unless (@wish.budget_bottom.nil? && @wish.budget_top.nil?) %>
                            <%= @wish.budget_bottom %> ~ <%= @wish.budget_top %> 
                        <% end %>      
                </div>
            </div>
            <div class="col-md-3">   

                <div class="button-group"> 
                    <!-- User 是 wish member -->
                    <% if @wish.user = current_user %>
                        <%= link_to edit_wish_path(@wish), class: "btn btn-light" do %> <i class="fas fa-edit"></i> 修改  <%end %>
                    <% end %> 

                    <!-- User  不是 wish member -->
                     <!-- 加入心願 -->
                     <!-- 申請加入 -->


                </div>

            </div>
        
</div>