<div class="container">

    <%= render partial: 'status', locals: { plan: @plan } %>

    <div class="row">
        
        <div class="col-md-8">
    
                <h4 id="member">隊伍成員</h4>
                <div class="member_list"> <span class="badge badge-light"> 隊員 6/7</span>  
                            <img src="https://fakeimg.pl/50x50/">
                            <img src="https://fakeimg.pl/50x50/">
                            <img src="https://fakeimg.pl/50x50/">
                            <img src="https://fakeimg.pl/50x50/">
                            <img src="https://fakeimg.pl/50x50/">
                            <img src="https://fakeimg.pl/50x50/">
                </div> 

                <h4 id="status">準備狀況</h4>
                <div>
                    入山、入園申請 <span class="badge badge-success"> 已完成 </span><br>
                    路況情報查詢 <span class="badge badge-success"> 已完成 </span><br>
                    氣象情報查詢 <span class="badge badge-success"> 已完成 </span><br>
                    公裝準備 <span class="badge badge-success"> 已完成 </span><br>

                </div>

                <hr>
                <h4>Respond join</h4>
                <% @respond_join.each do |user| %>
                  <%= link_to user.name, user_path(user) %>
                  <%= link_to '同意', accept_join_path(plan_id: @plan,user_id: user), method: :post, class: 'btn btn-info btn-sm' %>
                  <br>
                <% end %>

                <hr>
                <h4> 隊伍成員 confirm users </h4>
                <%  @confirm_users.each do |user| %>
                  <%= link_to user.name, user_path(user) %>
                <% end %>
                <hr>
                <% @users.each do |user| %>
                  <%= link_to user.name, user_path(user) %>
                  <br>
                <% end %>

                
        </div>

        <div class="col-md-4">
           <div class="fb-comments" data-href="<%= plan_url(@plan) %>" data-numposts="5"></div>
        </div>
        <div class="clearfix"></div>
    </div>
  
</div>