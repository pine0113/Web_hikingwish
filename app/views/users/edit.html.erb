<div class="col-md-6 col-md-offset-3">
<%= form_for @user do |f| %>

  <div class="form-group">
    <%= f.label :avatar, '顯示圖像' %>
    <%= image_tag @user.avatar, width: "150px"  if @user.avatar %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "顯示名稱" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "登山履歷" %>
    <%= f.text_area :intro, class: "form-control intro" %>
  </div>

  <div class="form-group">
  
    <%= link_to '取消', wishes_path, class: 'btn btn-light' %>
    <%= f.submit "更新", class: "btn btn-info" %>

  </div>

<% end %>
</div>