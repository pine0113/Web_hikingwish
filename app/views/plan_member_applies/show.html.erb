<%= link_to "計畫列表", plans_path + "?type=applied" ,class: "btn btn-light" %>
<%= link_to "計畫詳情", plan_path(@apply.plan) ,class: "btn btn-light" %>

<%= form_for @messenge do |f|  %>

    <%= f.hidden_field :chatable_type, value: @apply.class.name %>
    <%= f.hidden_field :chatable_id, value: @apply.id %>
    <%= f.text_field :content , class: "form-control", placeholder: "What do you want to say?" %>
    <%= f.submit '發送',class: "btn btn-info", name: nil %>
<% end %>

<% unless @messenges.nil? %>
    <% @messenges.each do |m| %>

        <%= m.user.name %> : <%= m.content%> <small> <%=time_ago_in_words(m.created_at)%> </small><br>

    <% end %> 
<% end %>
