  <div class="form container">

    <div class="col-sm-8 col-md-8">
      
      <%= form_for @wish, :builder => HikingWishFormBuilder do |f| %>
      <div class="form-group">
        <%= f.text_field :name , class: "form-control" %>
      </div>
      <div class="form-group row">
        <div class="col-sm-5">
          <%= image_tag @wish.image, width: "150px"  if @wish.image %>
          <%= f.file_field :image, class: "form-control" %>
        </div>
      </div>
       
      <label>時間區間</label>
      <div class="form-group row"> 
        <div class="col-sm-4 form-group">
          <%= f.date_field :start_date, class: "form-control" %>
        </div>
        <p>到</p>
        <div class="col-sm-4 form-group">
          <%= f.date_field :end_date, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label>備註</label>
        <%= f.text_area :description, :cols => "10", :rows => "5", class: "form-control" %>
      </div>

      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
        <label class="form-check-label" for="inlineRadio1">公開</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
        <label class="form-check-label" for="inlineRadio2">私人</label>
      </div>
        
      <hr>
      <div>
        
        <div class="form-group">
          <label>參考路線：</label>
          <%= f.collection_select( :hiking_id, Hiking.all, :id, :name, {:prompt => true}) %>
        </div>
        
        <div class="form-group">
          <label>天數：</label>
          
          <%= f.select :numberofday_id, howmanydays_select, {}, prompt: 'Select One' %>
        </div>
         
         <div class="form-group">
          <span class="badge badge-light"> 難度 </span>
          <% (0..@wish.level-1).each do |i| %>
            <i class="fas fa-star"></i>
          <% end %>
          <%= f.select :level, ["請選擇難度", 1, 2, 3, 4, 5], class: "form-control" %>
        </div>
        <button class="btn btn-info"> 更換 </button> <button class="btn btn-light"> 清除 </button>  <br>
      </div>


      <hr>
      <label>組團方式</label>
      <div>
        <p>之後再加</p>
      </div>
      <hr>
      <label>預算區間</label>
      <div class="form-group row"> 
        <div class="col-sm-4 form-group">
          <%= f.number_field :budget_bottom, class: "form-control" %>
        </div>
        <p>到</p>
        <div class="col-sm-4 form-group">
          <%= f.number_field :budget_top, class: "form-control" %>
        </div>
      </div>  
        <%= f.submit class: "btn btn-info form-group", value: "存檔" %> 

      <% end %>
      <br>

  </div>